<!DOCTYPE html>
<html>
    <head>
        <title>Job Listing </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <style>
      #background_nav {
        background-color: #404040;
      }

      .navbar-default .navbar-nav li a {
        color: #DFDFDF;
      }

      .navbar-default .navbar-nav li a:hover {
        color: white;
      }

      .navbar-default .navbar-brand {
        color: #DFDFDF;
      }

      .navbar-default .navbar-brand:hover {
        color: white;
      }

    </style>

    <body>

        <div class="container-fluid">
          <nav class="navbar navbar-default" role="navigation">
              <div class="container-fluid" id="background_nav">
                  <!-- Brand and toggle get grouped for better mobile display -->
                  <div class="navbar-header">
                      <a class="navbar-brand" href="/">Coins</a>
                  </div>

                  <!-- Collect the nav links, forms, and other content for toggling -->
                  <div class="collapse navbar-collapse" id="cc">
                      <ul class="nav navbar-nav navbar-right">
                          <li>
                            <% if !current_user %>
                              <li><%= link_to("注册", new_user_registration_path) %> </li>
                              <li><%= link_to("登入", new_user_session_path) %></li>
                            <% else %>
                            <li> <%= link_to("讨论区",articles_path) %> </li>
                            <li> <%= link_to("加入会员",member_index_path) %> </li>
                            <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                  Hi!, <%= current_user.email %>
                                  <b class="caret"></b>
                              </a>
                              <ul class="dropdown-menu">
                                  <li> <%= link_to("登出", destroy_user_session_path, method: :delete) %> </li>
                                  <% if current_user && current_user.is_admin %>
                                    <li> <%= link_to("用户页面",root_path) %> </li>
                                  <% end %>
                              </ul>
                            </li>
                          <% end %>
                          </li>
                      </ul>
                  </div>
                  <!-- /.navbar-collapse -->
              </div>
              <!-- /.container-fluid -->
          </nav>

            <%= render "common/flashes" %>
            <%= yield %>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
