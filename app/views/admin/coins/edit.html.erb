<h1>Edit a coin</h1>
<%= form_for [:admin,@coin] do |f| %>
  <div class="form-group <%= (f.object.errors[:name].any?)? "has-error" : "" %>">
    <%= f.label :Coin_name %>
    <%= f.label :name, "姓名", :class => "control-label" %>
    <%= f.text_field :name, :class => "form-control"%>
  </div>
  <% if f.object.errors[:name] %>
      <span class="help-block" style="color:Brown "><%= safe_join(f.object.errors[:name], "、") %></span>
  <% end %>
  <div class="form-group">
    <%= f.label :Market_value %>
    <%= f.text_field :mc, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Trading_volume %>
    <%= f.text_field :mv, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :Price %>
    <%= f.text_field :price, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :Circulation %>
    <%= f.text_field :marketl, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :Day %>
    <%= f.text_field :quota, :class => "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :Week %>
    <%= f.text_field :week, :class => "form-control"%>
  </div>

  <div class="form-group">
  <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<%end%>
